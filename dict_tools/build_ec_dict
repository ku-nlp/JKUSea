#!/usr/bin/env bash

# This script takes the CC-CEDICT dictionary (https://www.mdbg.net/chindict/chindict.php?page=cc-cedict) data
# and transforms them into a suitable format for the sentence aligner.
# The file dict/dict_en-zh.tsv has been generated by this script.
# As stipulated by the CC-CEDICT's license, the dict_en-zh.tsv file is
# distributed under the same license:
# CC BY-SA 3.0 (https://creativecommons.org/licenses/by-sa/3.0/)

WORK_DIR=/tmp/dict_en-zh

if [ -d $WORK_DIR ]; then 
    rm -rf $WORK_DIR
fi
mkdir $WORK_DIR

# Extract en-zh columns.
./extract_ec_pairs_from_CEDict.py > $WORK_DIR/dict_en-zh_non_formatted.tsv

# Format (juman + put same keys on one line).
./format_dictionary_EC.sh $WORK_DIR/dict_en-zh_non_formatted.tsv > $WORK_DIR/dict_en-zh.tsv

